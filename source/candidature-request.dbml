Table design_progetto {
	design_titolo varchar
	design_immagini_01_path varchar(255) [ note: 'Formato jpg/png/tiﬀ, formato 16:9 o 4:3 o 1:1, lato lungo 2480 pixel, risoluzione 300 dpi con profilo colore RGB' ]
	design_immagini_02_path varchar(255) [ note: 'Formato jpg/png/tiﬀ, formato 16:9 o 4:3 o 1:1, lato lungo 2480 pixel, risoluzione 300 dpi con profilo colore RGB' ]
	design_immagini_03_path varchar(255) [ note: 'Formato jpg/png/tiﬀ, formato 16:9 o 4:3 o 1:1, lato lungo 2480 pixel, risoluzione 300 dpi con profilo colore RGB' ]
	design_immagini_04_path varchar(255) [ note: 'Formato jpg/png/tiﬀ, formato 16:9 o 4:3 o 1:1, lato lungo 2480 pixel, risoluzione 300 dpi con profilo colore RGB' ]
	
	design_ambito varchar(255) [ note: (es. Pressione climatica, instabilità politica internazionale, bassa natalità e invecchiamento della popolazione, Intelligenza Artificiale  ) ]
	design_categoria varchar(255) [ note: 'Design per l\'Abitare (Arredo, complemento, illuminazione domestica, ecc.), Design per l\'Illuminazione (Apparecchi illuminotecnici per uso pubblico/tecnico), Design per la Mobilità (Mezzi di trasporto, sistemi di mobilità individuale o collettiva), Design per il Lavoro (Arredi ufficio, strumenti professionali, macchinari), Design per la Persona (Moda, accessori, occhialeria, medicale, protesi), Food Design (Progetto del cibo, packaging alimentare, strumenti per la preparazione), Design dei Materiali e dei sistemi tecnologici (Nuovi materiali, componenti semilavorati), Design della Comunicazione (Brand identity, wayfinding, editoria, poster), Design dei Servizi (Servizi digitali o fisici, UX/UI, sistemi complessi), Design per il Sociale (Progetti no-profit, per l\'emergenza o l\'inclusione), Allestimento (Mostre, stand fieristici, interior design pubblico), Ricerca teorico, storico, critica (Progetti di ricerca teorica)' ]
	design_materiali varchar(255) [ note: (es. ABS, acciaio, legno) ]
	design_dimensioni varchar(100) [ note: 'Altezza x Larghezza x Profondità - Es. 100x500x50 cm' ]
	design_supporti varchar(255) [ note: (es. Monitor 4K, Computer, Smartphone ) ]
	design_colore varchar(50) [ note: 'Colore/Bianco e nero' ]
	design_audio varchar(50) [ note: 'Sonoro/Muto' ]
	design_durata varchar(50) [ note: 'Minuti e secondi (es. 10/' 33/'/')' ]
  	design_allegato_b_path varchar [note: "Allegato B firmato dal Direttore"]
}

