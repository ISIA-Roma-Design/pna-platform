// --------------------------------------------------------------------------------
// SEZIONE TEATRO (Accademia Silvio d'Amico)
// --------------------------------------------------------------------------------

// Integra e aggiorna l'esempio utente con le nuove specifiche 2025



Table teatro_recitazione {
  // Sezione A - Recitazione
  teatro_recitazione_titolo varchar
  teatro_recitazione_tipo varchar [note: "Monologo (max 4 min) o Dialogo (max 5 min)"]
  teatro_recitazione_testo_titolo varchar [note: "Titolo e autore del testo di provenienza"]
  teatro_recitazione_cv_path varchar [note: "Breve Curriculum Vitae"]
  teatro_recitazione_foto1_path varchar [note: "Foto primo piano"]
  teatro_recitazione_foto2_path varchar [note: "Foto figura intera"]
  teatro_recitazione_dialogo_spalla_nome varchar [note: "Nome della spalla (se dialogo)"]
  teatro_recitazione_dialogo_spalla_cognome varchar [note: "Cognome della spalla (se dialogo)"]
}

Table teatro_regia {
	// Sezione B - Regia
	teatro_regia_titolo varchar
	teatro_regia_cv_path varchar(255) [ note: 'CV in formato PDF' ]
	teatro_regia_interprete1_nome varchar(255)
	teatro_regia_interprete1_cognome varchar(255)
	teatro_regia_interprete2_nome varchar(255)
	teatro_regia_interprete2_cognome varchar(255)
	teatro_regia_interprete3_nome varchar(255)
	teatro_regia_interprete3_cognome varchar(255)
	teatro_regia_pianoregia_path varchar [note: "Piano di regia max 3 cartelle"]
	teatro_regia_budget_path varchar [note: "Budget realizzazione scenica"]
	teatro_regia_videopath varchar [note: "Registrazione della scena in formato digitale"]
}


Table teatro_drammaturgia {
	// Sezione C - Drammaturgia
	teatro_drammaturgia_titolo varchar
	teatro_drammaturgia_cv_path  varchar(255) [ note: 'CV in formato PDF' ]
	teatro_drammaturgia_sottosezione varchar [note: "Miglior drammaturgia o Testo comico (Premio Anna Marchesini)"]
	teatro_drammaturgia_sinossi text
	teatro_drammaturgia_testo_pdf varchar [note: "Testo teatrale inedito in PDF"]
	teatro_drammaturgia_videoscena_path varchar [note: "Video di una scena estratta (max 5 min)"]
}

